generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  name      String  @default("")
  email     String  @unique
  password  String?
  bio       String  @default("")
  avatarUrl String?
  bannerUrl String?

  videos      Video[]
  comments    Comment[]
  likes       Like[]
  tags        Tag[]
  collections Collection[]
  histories   History[]

  followedByUsers Follow[] @relation("FollowedBy")
  usersFollowed   Follow[] @relation("UserFollows")

  likedComments    Comment[] @relation("UserLikeComment")
  dislikedComments Comment[] @relation("UserDislikeComment")
}

model Follow {
  createdAt   DateTime @default(now())
  followerId  String
  followingId String

  followedBy  User @relation("FollowedBy", fields: [followingId], references: [id])
  userFollows User @relation("UserFollows", fields: [followerId], references: [id])

  @@id([followingId, followerId])
}

model Video {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  title       String
  description String?
  url         String
  coverUrl    String
  views       BigInt   @default(0)
  authorId    String

  author User @relation(fields: [authorId], references: [id])

  comments    Comment[]
  likes       Like[]
  collections Collection[] // 收藏
  histories   History[]

  tags Tag[] // 视频标签
}

model History {
  createdAt DateTime @default(now())
  userId    String
  videoId   String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  video Video @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@id([userId, videoId])
}

model Comment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  text      String
  imgUrl    String?
  authorId  String
  videoId   String

  author        User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  video         Video  @relation(fields: [videoId], references: [id], onDelete: Cascade)
  likedUsers    User[] @relation("UserLikeComment")
  dislikedUsers User[] @relation("UserDislikeComment")
}

model Like {
  createdAt DateTime @default(now())
  userId    String
  videoId   String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  video Video @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@id([userId, videoId])
}

model Collection {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  name      String   @db.VarChar(30)
  ownerId   String

  owner  User    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  videos Video[]

  @@unique([name, ownerId])
}

enum TagType {
  Category
  Tag
}

model Tag {
  id          String   @id @default(cuid())
  type        TagType  @default(Tag)
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  users       User[]
  videos      Video[]
}
